{
  "manifest_version": 3,
  "name": "e621/e6AI Posts Opener + Toolbar",
  "version": "6.2.5",
  "description": "Otevírání/stahování ze stránek s cestou /posts*. CZ/EN UI, delay/limit, volba složky (FS API) + fallback do Stažené, spodní fixní lišta. Burst/placeholder režim.",

  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "tabs",
    "alarms",
    "tabGroups",
    "scripting",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "https://e6ai.net/*",
    "https://*.e6ai.net/*",
    "https://e621.net/*",
    "https://*.e621.net/*"
  ],

  "background": { "service_worker": "background.js" },

  "action": {
    "default_title": "e6 – přepnout řazení skupiny"
  },

  "commands": {
    "toggle-sort": {
      "suggested_key": { "default": "Ctrl+Shift+X" },
      "description": "Přepnout řazení skupiny e6 (A↔Z, 1↔9)"
    },
    "toggle-locale": {
      "suggested_key": { "default": "Ctrl+Shift+L" },
      "description": "Přepnout jazyk řazení (Auto → CZ → EN)"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://e6ai.net/*",
        "https://*.e6ai.net/*",
        "https://e621.net/*",
        "https://*.e621.net/*"
      ],
      "js": ["content/sfw-link-rewriter.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": [
        "https://e6ai.net/*",
        "https://*.e6ai.net/*",
        "https://e621.net/*",
        "https://*.e621.net/*"
      ],
      "js": [
        "content/e6-post-opener.js",
        "content/e6-post-toolbar.js",
        "content/i18n-runtime.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["placeholder.html", "icons/*"],
      "matches": ["*://*/*"]
    }
  ],

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
